<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giris_ekrani_arkaplan"

    tools:context=".girisactivity.SifremiUnuttumAktivity">

    <ProgressBar
        android:id="@+id/sifremi_unuttum_activity_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/sifremi_unuttum_activity_animasyonGgorseli"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/centerline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp"
        app:srcCompat="@drawable/giris_ekrani_gorsel" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/centerline"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sifre Yenileme"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Endişelenme Biz Buradayız"
            android:textColor="#ffeb3b"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/centerline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:padding="5dp"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/centerline"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_arkaplan"
        app:boxBackgroundColor="@color/seffaf">

        <EditText
            android:id="@+id/sifremi_unuttum_activity_editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/seffaf"
            android:hint="Kayıtlı email adresinizi giriniz"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />
    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/sifremi_unuttum_activity_buttonSifremiYenile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/giris_erkani_buton_arkaplan"
        android:text="şifremi yenile"
        android:textColor="@color/dalganın_rengi"
        android:textSize="18sp"
        android:elevation="20dp"
        android:textStyle="bold">

    </Button>

    <TextView
        android:id="@+id/giris_ekrani_activity_textViewSifremiHatirlarGibiyim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Şifremi hatırlar gibiyim"
        android:textAlignment="center"
        android:layout_below="@id/sifremi_unuttum_activity_buttonSifremiYenile"
        android:textColor="@color/dalganınArkasındakiRenk" />






</RelativeLayout>






