<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!--aşağıda yapacaklarımızın diktrgen olduğun belirtiyoruz-->
        <shape android:shape="rectangle">

            <!-- şeklin içindeki rengi belirler-->
            <solid android:color="#1bffffff" />

            <!-- şeklin köşelerini yuvarlamak için kullanılır-->
            <corners android:radius="50dp" />

            <!-- şeklin kenar çizgilerini ve onların özellğini belirtir-->
            <stroke android:width="1dp" android:color="#65faf8f8"/>
        </shape>
    </item>
</selector>